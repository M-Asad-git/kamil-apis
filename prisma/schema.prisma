generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Category {
  Laptops
  Desktops
  Accessories
}

model Product {
  id         String   @id @default(uuid())
  name       String
  category   Category
  description String   @db.Text
  price      Decimal  @db.Decimal(10, 2)
  images     Json?
  stock      Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}